@model IEnumerable<QuanLyQuanNuoc_65130449.Models.DonHang>
@{
    ViewBag.Title = "Duyệt đơn hàng";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-sky-50 to-emerald-50 py-8">
    <div class="container mx-auto px-4">
        
        <div class="text-center mb-8">
            <h1 class="text-4xl font-extrabold text-gray-800 mb-2">
                <i class="fa fa-clipboard-check text-sky-600 mr-3"></i>Duyệt Đơn Hàng
            </h1>
            <p class="text-gray-600">Danh sách đơn hàng chờ duyệt</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="bg-emerald-100 border border-emerald-400 text-emerald-700 font-semibold px-4 py-3 rounded-xl mb-6 shadow-md">
                <i class="fa fa-circle-check mr-2"></i> @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 font-semibold px-4 py-3 rounded-xl mb-6 shadow-md">
                <i class="fa fa-triangle-exclamation mr-2"></i> @TempData["Error"]
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-sky-600 text-white">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Mã đơn</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Khách hàng</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Ngày đặt</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Tổng tiền</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Địa chỉ giao</th>
                                <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Trạng thái</th>
                                <th class="px-6 py-4 text-center text-xs font-bold uppercase tracking-wider">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var donHang in Model)
                            {
                                <tr class="hover:bg-sky-50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="font-semibold text-gray-900">@donHang.MaDonHang</span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">@(donHang.KhachHang?.HoTen ?? "N/A")</div>
                                        <div class="text-sm text-gray-500">@(donHang.KhachHang?.SoDienThoai ?? "")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        @donHang.NgayDat.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="font-bold text-emerald-600">
                                            @((donHang.TongTien ?? 0).ToString("N0")) đ
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-gray-900 max-w-xs truncate">@donHang.DiaChiGiaoHang</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-3 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            @(ViewBag.TrangThaiDict != null && ViewBag.TrangThaiDict.ContainsKey(donHang.TrangThai) ? ViewBag.TrangThaiDict[donHang.TrangThai] : donHang.TrangThai)
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex justify-center space-x-2">
                                            <a href="@Url.Action("ChiTietDonHang", "NhanVienController_65130449", new { id = donHang.MaDonHang })"
                                               class="inline-flex items-center px-4 py-2 bg-sky-500 hover:bg-sky-600 text-white text-sm font-medium rounded-lg transition duration-200">
                                                <i class="fa fa-eye mr-2"></i>Xem chi tiết
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-xl p-12 text-center">
                <i class="fa fa-inbox text-gray-300 text-6xl mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">Không có đơn hàng nào chờ duyệt</h3>
                <p class="text-gray-500">Tất cả đơn hàng đã được xử lý.</p>
            </div>
        }
    </div>
</div>
