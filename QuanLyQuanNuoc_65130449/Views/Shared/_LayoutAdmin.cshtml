<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside class="w-64 bg-slate-800 text-white flex flex-col">
            <!-- Logo -->
            <div class="p-6 border-b border-slate-700">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-sky-600 rounded-lg flex items-center justify-center">
                        <span class="text-white text-xl font-bold">Q</span>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold">Admin Panel</h1>
                        <p class="text-xs text-slate-400">Quản lý hệ thống</p>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 p-4 space-y-2">
                <a href="@Url.Action("Index", "AdminController_65130449")"
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-slate-700 transition @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "bg-sky-600" : "")">
                    <i class="fas fa-home w-5"></i>
                    <span>Trang chủ</span>
                </a>

                <a href="@Url.Action("DS_SP", "AdminController_65130449")"
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-slate-700 transition @(ViewContext.RouteData.Values["action"].ToString() == "DS_SP" ? "bg-sky-600" : "")">
                    <i class="fas fa-box w-5"></i>
                    <span>Sản phẩm</span>
                </a>

                <a href="@Url.Action("DS_DanhMuc", "AdminController_65130449")"
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-slate-700 transition @(ViewContext.RouteData.Values["action"].ToString() == "DS_DanhMuc" ? "bg-sky-600" : "")">
                    <i class="fas fa-list w-5"></i>
                    <span>Danh mục</span>
                </a>

                <a href="@Url.Action("DS_NV", "AdminController_65130449")"
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-slate-700 transition @(ViewContext.RouteData.Values["action"].ToString() == "DS_NV" ? "bg-sky-600" : "")">
                    <i class="fas fa-users w-5"></i>
                    <span>Nhân viên</span>
                </a>

                <a href="@Url.Action("DS_KH", "AdminController_65130449")"
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-slate-700 transition @(ViewContext.RouteData.Values["action"].ToString() == "DS_KH" || ViewContext.RouteData.Values["action"].ToString() == "Detail_KH" ? "bg-sky-600" : "")">
                    <i class="fas fa-user-friends w-5"></i>
                    <span>Khách hàng</span>
                </a>

                <a href="@Url.Action("DoanhThu", "AdminController_65130449")"
                   class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-slate-700 transition @(ViewContext.RouteData.Values["action"].ToString() == "DoanhThu" ? "bg-sky-600" : "")">
                    <i class="fas fa-chart-line w-5"></i>
                    <span>Doanh thu</span>
                </a>
            </nav>

            <!-- Logout -->
            <div class="p-4 border-t border-slate-700">
                @using (Html.BeginForm("Index", "TrangChuController_65130449", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="w-full flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-red-600 transition">
                        <i class="fas fa-sign-out-alt w-5"></i>
                        <span>Đăng xuất</span>
                    </button>
                }
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-white shadow-sm border-b border-gray-200">
                <div class="px-6 py-4">
                    <h2 class="text-2xl font-bold text-gray-800">@ViewBag.Title</h2>
                </div>
            </header>

            <!-- Content -->
            <main class="flex-1 overflow-y-auto p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
