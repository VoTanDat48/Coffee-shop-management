<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quán Nước 65130449</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-sky-50 via-emerald-50 to-sky-50 min-h-screen">
    <!-- Header -->
    <header class="bg-white/90 backdrop-blur-sm shadow-md">
        <div class="container mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="@Url.Action("Index", "KhachHangController_65130449")" class="flex items-center hover:opacity-80 transition">
                        <img src="/Images/Logo.png" alt="Logo" class="h-16 w-auto object-contain" />
                    </a>
                </div>

                <!-- Navigation -->
                <div class="flex items-center space-x-4">
                    <!-- Trang chủ -->
                    <a href="@Url.Action("Index", "KhachHangController_65130449")"
                       class="px-4 py-2 text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-lg font-medium transition">
                        <i class="fas fa-home mr-2"></i>Trang chủ
                    </a>

                    <!-- Thực đơn -->
                    <a href="@Url.Action("Menu_KH", "KhachHangController_65130449")"
                       class="px-4 py-2 text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-lg font-medium transition">
                        <i class="fas fa-utensils mr-2"></i>Menu
                    </a>

                    <!-- Giỏ hàng -->
                    <a href="@Url.Action("Cart", "KhachHangController_65130449")"
                       class="px-4 py-2 text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-lg font-medium relative transition">
                        <i class="fas fa-shopping-cart mr-2"></i>Giỏ hàng
                        @if (Session["CartCount"] != null && (int)Session["CartCount"] > 0)
                        {
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-bold">
                                @Session["CartCount"]
                            </span>
                        }
                    </a>

                    <!-- Tài khoản hoặc Đăng nhập -->
                    <div class="relative ml-2">
                        @if (Session["UserRole"]?.ToString() == "Customer")
                        {
                            <!-- Hiển thị tên tài khoản -->
                            <button id="userMenuButton"
                                    class="flex items-center space-x-2 px-4 py-2 text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-lg font-medium focus:outline-none transition">
                                <i class="fas fa-user-circle text-xl"></i>
                                <span>@(Session["HoTen"]?.ToString() ?? "Tài khoản")</span>
                                <i class="fas fa-chevron-down text-xs"></i>
                            </button>

                            <!-- Menu dropdown -->
                            <div id="userDropdown"
                                 class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 z-50">
                                <a href="@Url.Action("MyAccount", "KhachHangController_65130449")"
                                   class="block px-4 py-2 text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-user mr-2"></i>Hồ sơ
                                </a>
                                <a href="@Url.Action("MyOrders", "KhachHangController_65130449")"
                                   class="block px-4 py-2 text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-receipt mr-2"></i>Đơn hàng
                                </a>
                                <div class="border-t my-1"></div>
                                @using (Html.BeginForm("LogOff", "AccountController_65130449", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="w-full text-left px-4 py-2 text-red-600 hover:bg-gray-100">
                                        <i class="fas fa-sign-out-alt mr-2"></i>Đăng xuất
                                    </button>
                                }
                            </div>

                            <!-- Script đơn giản để toggle dropdown -->
                            <script>
                                const userBtn = document.getElementById('userMenuButton');
                                const userDropdown = document.getElementById('userDropdown');

                                userBtn.addEventListener('click', function () {
                                    userDropdown.classList.toggle('hidden');
                                });

                                // Đóng dropdown khi click ra ngoài
                                document.addEventListener('click', function (e) {
                                    if (!userBtn.contains(e.target) && !userDropdown.contains(e.target)) {
                                        userDropdown.classList.add('hidden');
                                    }
                                });
                            </script>
                        }
                        else
                        {
                            <!-- Nút đăng nhập -->
                            <a href="@Url.Action("Login", "AccountController_65130449")"
                               class="bg-sky-500 hover:bg-sky-600 text-white px-6 py-2.5 rounded-lg font-medium shadow-md shadow-emerald-200/70 transition">
                                <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
                            </a>
                        }
                    </div>

                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8 bg-transparent">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8 mt-12">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <p>&copy; @DateTime.Now.Year - Quán Nước 65130449. All rights reserved.</p>
                <p class="mt-2 text-gray-400">Địa chỉ: 123 Đường ABC, Quận XYZ, TP.HCM</p>
                <p class="text-gray-400">Hotline: 0909 123 456</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>