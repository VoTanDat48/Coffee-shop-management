<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quán Nước 65130449</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-sky-50 via-emerald-50 to-sky-50 flex flex-col min-h-screen">

    <!-- Header luôn nằm trên cùng -->
    <header class="bg-white/90 backdrop-blur-sm shadow-sm">
        <div class="max-w-6xl mx-auto px-6 py-5 flex justify-between items-center">

            <!-- Logo -->
            <a href="@Url.Action("Index", "TrangChuController_65130449")" class="flex items-center hover:opacity-80 transition">
                <img src="/Images/Logo.png" alt="Logo" class="h-16 w-auto object-contain" />
            </a>

            <!-- Navigation -->
            <nav class="flex items-center space-x-4">
                <!-- Trang Chủ -->
                <a href="@Url.Action("Index", "TrangChuController_65130449")"
                   class="px-4 py-2 text-gray-700 hover:text-sky-600 hover:bg-sky-50 rounded-lg font-medium transition">
                    <i class="fas fa-home mr-2"></i>Trang chủ
                </a>
            </nav>
        </div>
    </header>

    <!-- Nội dung chính -->
    <main class="flex-1 w-full max-w-md mx-auto mt-6 px-4">
        @RenderBody()
    </main>
    @RenderSection("scripts", required: false)
</body>
</html>
