<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quán Nước 65130449</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-50 flex flex-col min-h-screen">

    <!-- HEADER -->
    <header class="bg-white shadow-sm">
        <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">

            <!-- Logo -->
            <a href="@Url.Action("Index", "TrangChuController_65130449")" class="flex items-center space-x-2">
                <div class="w-9 h-9 bg-sky-500 rounded-lg flex items-center justify-center shadow-md shadow-emerald-300/60">
                    <span class="text-white font-bold text-lg">Q</span>
                </div>
                <h1 class="text-xl font-bold text-gray-800">Quán Nước 65130449</h1>
            </a>

            <!-- Navigation -->
            <nav class="flex items-center space-x-6">

                <!-- Trang Chủ -->
                <a href="@Url.Action("Index", "TrangChuController_65130449")"
                   class="text-gray-700 hover:text-sky-500 font-medium">
                    <i class="fas fa-home mr-1"></i>Trang chủ
                </a>

                <!-- Thực đơn -->
                <a href="@Url.Action("Menu", "TrangChuController_65130449")"
                   class="text-gray-700 hover:text-sky-500 font-medium">
                    <i class="fas fa-utensils mr-1"></i>Menu
                </a>

                <!-- Logic đăng nhập/đăng xuất -->
                @if (Request.IsAuthenticated)
                {
                    <span class="text-gray-600 font-medium">Xin chào, @User.Identity.Name</span>
                    <a href="@Url.Action("LogOut", "AccountController_65130449")"
                       class="px-4 py-2 bg-emerald-500 hover:bg-emerald-600 text-white rounded-lg font-medium transition">
                        <i class="fas fa-sign-out-alt mr-1"></i> Đăng xuất
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login", "AccountController_65130449")"
                       class="px-4 py-2 bg-sky-500 hover:bg-sky-600 text-white rounded-lg font-medium transition shadow-md shadow-emerald-200/70">
                        <i class="fas fa-sign-in-alt mr-1"></i> Đăng nhập để mua hàng
                    </a>
                }
            </nav>
        </div>
    </header>

    <!-- BODY -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-gray-800 text-white py-4 mt-10">
        <div class="max-w-6xl mx-auto px-4 text-center">
            <p class="text-sm">&copy; @DateTime.Now.Year Quán Nước 65130449</p>
            <p class="text-xs text-gray-400">Đồ án Quản lý quán nước</p>
        </div>
    </footer>

</body>
</html>
