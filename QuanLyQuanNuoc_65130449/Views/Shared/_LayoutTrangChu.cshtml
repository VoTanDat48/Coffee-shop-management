<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quán Nước 65130449</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gradient-to-br from-sky-50 via-emerald-50 to-sky-50 flex flex-col min-h-screen">

    <!-- HEADER -->
    <header class="bg-white/90 backdrop-blur-sm shadow-sm">
        <div class="max-w-6xl mx-auto px-6 py-5 flex justify-between items-center">

            <!-- Logo -->
            <a href="@Url.Action("Index", "TrangChuController_65130449")" class="flex items-center hover:opacity-80 transition">
                <img src="/Images/Logo.png" alt="Logo" class="h-16 w-auto object-contain" />
            </a>

            <!-- Navigation -->
            <nav class="flex items-center space-x-4">

                <!-- Trang Chủ -->
                <a href="@Url.Action("Index", "TrangChuController_65130449")"
                   class="px-4 py-2 text-gray-700 hover:text-sky-500 hover:bg-sky-50 rounded-lg font-medium transition">
                    <i class="fas fa-home mr-2"></i>Trang chủ
                </a>

                <!-- Thực đơn -->
                <a href="@Url.Action("Menu", "TrangChuController_65130449")"
                   class="px-4 py-2 text-gray-700 hover:text-sky-500 hover:bg-sky-50 rounded-lg font-medium transition">
                    <i class="fas fa-utensils mr-2"></i>Menu
                </a>

                <!-- Logic đăng nhập/đăng xuất -->
                @if (Request.IsAuthenticated)
                {
                    <span class="px-4 py-2 text-gray-600 font-medium">Xin chào, @User.Identity.Name</span>
                    <a href="@Url.Action("LogOut", "AccountController_65130449")"
                       class="px-5 py-2.5 bg-emerald-500 hover:bg-emerald-600 text-white rounded-lg font-medium transition shadow-md">
                        <i class="fas fa-sign-out-alt mr-2"></i> Đăng xuất
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login", "AccountController_65130449")"
                       class="px-6 py-2.5 bg-sky-500 hover:bg-sky-600 text-white rounded-lg font-medium transition shadow-md shadow-emerald-200/70">
                        <i class="fas fa-sign-in-alt mr-2"></i> Đăng nhập để mua hàng
                    </a>
                }
            </nav>
        </div>
    </header>

    <!-- BODY -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-gray-800 text-white py-4 mt-10">
        <div class="max-w-6xl mx-auto px-4 text-center">
            <p class="text-sm">&copy; @DateTime.Now.Year Quán Nước 65130449</p>
            <p class="text-xs text-gray-400">Đồ án Quản lý quán nước</p>
        </div>
    </footer>

</body>
</html>
