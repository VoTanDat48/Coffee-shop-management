@model IEnumerable<QuanLyQuanNuoc_65130449.Models.SanPham>
@{
    ViewBag.Title = "Tìm kiếm Sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="bg-white rounded-lg shadow p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Tìm kiếm sản phẩm</h2>
    @using (Html.BeginForm("TimKiemSP", "AdminController_65130449", FormMethod.Get))
    {
        <div class="flex space-x-4">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Tìm theo tên sản phẩm hoặc danh mục..."
                   class="flex-1 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-sky-500" />
            <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white px-6 py-2 rounded-lg font-medium shadow-md shadow-emerald-200/70">
                <i class="fas fa-search mr-2"></i>Tìm kiếm
            </button>
            @if (!string.IsNullOrEmpty(ViewBag.Search as string))
            {
                <a href="@Url.Action("TimKiemSP", "AdminController_65130449")" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg font-medium">
                    Xóa bộ lọc
                </a>
            }
        </div>
    }
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="p-6 border-b border-gray-200 flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-800">Kết quả tìm kiếm</h2>
        <a href="@Url.Action("DS_SP", "AdminController_65130449")" class="text-sky-600 hover:text-sky-700">
            <i class="fas fa-arrow-left mr-2"></i>Quay lại danh sách
        </a>
    </div>
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ảnh</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên sản phẩm</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Danh mục</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Đơn giá</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model != null && Model.Any())
            {
                foreach (var sp in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="w-16 h-16 bg-gray-200 rounded-lg overflow-hidden">
                                @if (!string.IsNullOrEmpty(sp.HinhAnh))
                                {
                                    <img src="@sp.HinhAnh" alt="@sp.TenSP" class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@sp.TenSP</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@(sp.DanhMuc?.TenDanhMuc ?? "N/A")</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">@String.Format("{0:N0}", sp.DonGia)₫</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex space-x-2">
                                <a href="@Url.Action("Edit_SP", "AdminController_65130449", new { id = sp.MaSP })"
                                   class="text-sky-600 hover:text-sky-900">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                        @if (!string.IsNullOrEmpty(ViewBag.Search as string))
                        {
                            <span>Không tìm thấy sản phẩm nào phù hợp với từ khóa "@ViewBag.Search"</span>
                        }
                        else
                        {
                            <span>Nhập từ khóa để tìm kiếm</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
