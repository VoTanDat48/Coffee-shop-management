@model IEnumerable<QuanLyQuanNuoc_65130449.Models.KhachHang>
@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="bg-white rounded-lg shadow p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Tìm kiếm khách hàng</h2>
    @using (Html.BeginForm("DS_KH", "AdminController_65130449", FormMethod.Get))
    {
        <input type="hidden" name="page" value="1" />
        <div class="flex space-x-4">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Tìm theo tên, email, số điện thoại, tên đăng nhập..."
                   class="flex-1 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-sky-500" />
            <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white px-6 py-2 rounded-lg font-medium shadow-md shadow-emerald-200/70">
                <i class="fas fa-search mr-2"></i>Tìm kiếm
            </button>
            @if (!string.IsNullOrEmpty(ViewBag.Search as string))
            {
                <a href="@Url.Action("DS_KH", "AdminController_65130449")" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg font-medium">
                    Xóa bộ lọc
                </a>
            }
        </div>
    }
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="p-6 border-b border-gray-200">
        <h2 class="text-2xl font-bold text-gray-800">Danh sách Khách hàng</h2>
    </div>
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Họ tên</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số điện thoại</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên đăng nhập</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số đơn hàng</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model != null && Model.Any())
            {
                foreach (var kh in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@kh.MaKH</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">@kh.HoTen</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@kh.Email</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@kh.SoDienThoai</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@kh.TenDangNhap</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@kh.DonHangs.Count</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a href="@Url.Action("Detail_KH", "AdminController_65130449", new { id = kh.MaKH })"
                               class="text-sky-600 hover:text-sky-900">
                                <i class="fas fa-eye mr-1"></i> Chi tiết
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                        @if (!string.IsNullOrEmpty(ViewBag.Search as string))
                        {
                            <span>Không tìm thấy khách hàng nào phù hợp với từ khóa "@ViewBag.Search"</span>
                        }
                        else
                        {
                            <span>Chưa có khách hàng nào</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    @if (ViewBag.TotalPages > 1)
    {
        <div class="px-6 py-4 border-t border-gray-200">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Hiển thị <span class="font-medium">@((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1)</span> đến 
                    <span class="font-medium">@(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalItems))</span> 
                    trong tổng <span class="font-medium">@ViewBag.TotalItems</span> khách hàng
                </div>
                <div class="flex space-x-2">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@Url.Action("DS_KH", "AdminController_65130449", new { page = ViewBag.CurrentPage - 1, search = ViewBag.Search })"
                           class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            « Trước
                        </a>
                    }
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        if (i == ViewBag.CurrentPage)
                        {
                            <span class="px-3 py-2 bg-sky-600 text-white rounded-lg">@i</span>
                        }
                        else
                        {
                            <a href="@Url.Action("DS_KH", "AdminController_65130449", new { page = i, search = ViewBag.Search })"
                               class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                                @i
                            </a>
                        }
                    }
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a href="@Url.Action("DS_KH", "AdminController_65130449", new { page = ViewBag.CurrentPage + 1, search = ViewBag.Search })"
                           class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            Sau »
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>
