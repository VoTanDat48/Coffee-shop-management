@model IEnumerable<QuanLyQuanNuoc_65130449.Models.NhanVien>
@{
    ViewBag.Title = "Tìm kiếm Nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="bg-white rounded-lg shadow p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Tìm kiếm nhân viên</h2>
    @using (Html.BeginForm("TimKiemNV", "AdminController_65130449", FormMethod.Get))
    {
        <div class="flex space-x-4">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Tìm theo tên, số điện thoại, tên đăng nhập..."
                   class="flex-1 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-sky-500" />
            <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white px-6 py-2 rounded-lg font-medium shadow-md shadow-emerald-200/70">
                <i class="fas fa-search mr-2"></i>Tìm kiếm
            </button>
            @if (!string.IsNullOrEmpty(ViewBag.Search as string))
            {
                <a href="@Url.Action("TimKiemNV", "AdminController_65130449")" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg font-medium">
                    Xóa bộ lọc
                </a>
            }
        </div>
    }
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="p-6 border-b border-gray-200 flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-800">Kết quả tìm kiếm</h2>
        <a href="@Url.Action("DS_NV", "AdminController_65130449")" class="text-sky-600 hover:text-sky-700">
            <i class="fas fa-arrow-left mr-2"></i>Quay lại danh sách
        </a>
    </div>
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Họ tên</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số điện thoại</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên đăng nhập</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vai trò</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model != null && Model.Any())
            {
                foreach (var nv in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@nv.MaNV</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">@nv.HoTen</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@nv.SoDienThoai</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@nv.TenDangNhap</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 py-1 text-xs rounded-full
                                @(nv.VaiTro == 3 ? "bg-purple-100 text-purple-800" :
                                  nv.VaiTro == 1 ? "bg-blue-100 text-blue-800" : "bg-green-100 text-green-800")">
                                @(nv.VaiTro == 3 ? "Quản lý" : nv.VaiTro == 1 ? "Duyệt" : "Giao hàng")
                            </span>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                        @if (!string.IsNullOrEmpty(ViewBag.Search as string))
                        {
                            <span>Không tìm thấy nhân viên nào phù hợp với từ khóa "@ViewBag.Search"</span>
                        }
                        else
                        {
                            <span>Nhập từ khóa để tìm kiếm</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


