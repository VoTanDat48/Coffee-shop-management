@model IEnumerable<QuanLyQuanNuoc_65130449.Models.SanPham>
@{
    ViewBag.Title = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        @TempData["Error"]
    </div>
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-800">Danh sách Sản phẩm</h2>
    <div class="flex space-x-3">
        <a href="@Url.Action("TimKiemSP", "AdminController_65130449")"
           class="bg-emerald-500 hover:bg-emerald-600 text-white px-4 py-2 rounded-lg font-medium shadow-md">
            <i class="fas fa-search mr-2"></i>Tìm kiếm
        </a>
        <a href="@Url.Action("Create_SP", "AdminController_65130449")"
           class="bg-sky-500 hover:bg-sky-600 text-white px-4 py-2 rounded-lg font-medium shadow-md shadow-emerald-200/70">
            <i class="fas fa-plus mr-2"></i>Thêm sản phẩm
        </a>
    </div>
</div>

<!-- Thanh phân loại sản phẩm -->
<div class="bg-white rounded-lg shadow p-6 mb-6">
    <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold text-gray-800">Phân loại sản phẩm</h3>
        @{
            int? currentCategoryId = ViewBag.SelectedCategoryId as int?;
        }
        @if (currentCategoryId.HasValue && currentCategoryId.Value > 0)
        {
            var selectedCategory = (ViewBag.DanhMucs as List<QuanLyQuanNuoc_65130449.Models.DanhMuc>)?.FirstOrDefault(dm => dm.MaDanhMuc == currentCategoryId.Value);
            if (selectedCategory != null)
            {
                <span class="text-sm text-sky-600 font-medium">
                    <i class="fas fa-filter mr-1"></i>Đang lọc: @selectedCategory.TenDanhMuc
                </span>
            }
        }
    </div>
    @using (Html.BeginForm("DS_SP", "AdminController_65130449", FormMethod.Get))
    {
        <input type="hidden" name="page" value="1" />
        <div class="flex space-x-4 items-end">
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Chọn danh mục</label>
                <select name="categoryId" id="categorySelect" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-500">
                    <option value="">Tất cả danh mục</option>
                    @if (ViewBag.DanhMucs != null)
                    {
                        int? selectedId = ViewBag.SelectedCategoryId as int?;
                        foreach (var dm in ViewBag.DanhMucs)
                        {
                            bool isSelected = selectedId.HasValue && selectedId.Value == dm.MaDanhMuc;
                            <option value="@dm.MaDanhMuc" @(isSelected ? "selected" : "")>
                                @dm.TenDanhMuc
                            </option>
                        }
                    }
                </select>
            </div>
            <div>
                <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white px-6 py-2 rounded-lg font-medium shadow-md shadow-emerald-200/70">
                    <i class="fas fa-filter mr-2"></i>Lọc
                </button>
            </div>
            @if (currentCategoryId.HasValue && currentCategoryId.Value > 0)
            {
                <div>
                    <a href="@Url.Action("DS_SP", "AdminController_65130449", new { page = 1 })" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg font-medium">
                        <i class="fas fa-times mr-2"></i>Xóa bộ lọc
                    </a>
                </div>
            }
        </div>
    }
</div>

<script>
    // Auto submit khi thay đổi danh mục (tùy chọn - có thể bỏ nếu muốn phải click nút Lọc)
    // document.getElementById('categorySelect').addEventListener('change', function() {
    //     this.form.submit();
    // });
</script>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ảnh</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên sản phẩm</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Danh mục</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Đơn giá</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model != null && Model.Any())
            {
                foreach (var sp in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="w-16 h-16 bg-gray-200 rounded-lg overflow-hidden">
                                @if (!string.IsNullOrEmpty(sp.HinhAnh))
                                {
                                    <img src="@sp.HinhAnh" alt="@sp.TenSP" class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@sp.TenSP</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@(sp.DanhMuc?.TenDanhMuc ?? "N/A")</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">@String.Format("{0:N0}", sp.DonGia)₫</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex space-x-2">
                                <a href="@Url.Action("Edit_SP", "AdminController_65130449", new { id = sp.MaSP })"
                                   class="text-sky-600 hover:text-sky-900">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <form method="post" action="@Url.Action("Delete_SP", "AdminController_65130449", new { id = sp.MaSP })" 
                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');" class="inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="text-red-600 hover:text-red-900">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                        Chưa có sản phẩm nào. <a href="@Url.Action("Create_SP", "AdminController_65130449")" class="text-sky-600 hover:underline">Thêm sản phẩm ngay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    @if (ViewBag.TotalPages > 1)
    {
        <div class="px-6 py-4 border-t border-gray-200">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Hiển thị <span class="font-medium">@((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1)</span> đến 
                    <span class="font-medium">@(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalItems))</span> 
                    trong tổng <span class="font-medium">@ViewBag.TotalItems</span> sản phẩm
                </div>
                <div class="flex space-x-2">
                    @{
                        var routeValues = new System.Web.Routing.RouteValueDictionary();
                        if (ViewBag.SelectedCategoryId != null)
                        {
                            routeValues["categoryId"] = ViewBag.SelectedCategoryId;
                        }
                    }
                    @if (ViewBag.CurrentPage > 1)
                    {
                        routeValues["page"] = ViewBag.CurrentPage - 1;
                        <a href="@Url.Action("DS_SP", "AdminController_65130449", routeValues)"
                           class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            « Trước
                        </a>
                    }
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        routeValues["page"] = i;
                        if (i == ViewBag.CurrentPage)
                        {
                            <span class="px-3 py-2 bg-sky-600 text-white rounded-lg">@i</span>
                        }
                        else
                        {
                            <a href="@Url.Action("DS_SP", "AdminController_65130449", routeValues)"
                               class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                                @i
                            </a>
                        }
                    }
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        routeValues["page"] = ViewBag.CurrentPage + 1;
                        <a href="@Url.Action("DS_SP", "AdminController_65130449", routeValues)"
                           class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            Sau »
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>
