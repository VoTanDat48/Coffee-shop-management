@model QuanLyQuanNuoc_65130449.Models.KhachHang
@{
    ViewBag.Title = "Chi tiết Khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var donHangs = ViewBag.DonHangs as List<QuanLyQuanNuoc_65130449.Models.DonHang>;
}

<div class="mb-6">
    <a href="@Url.Action("DS_KH", "AdminController_65130449")" class="text-sky-600 hover:text-sky-700">
        <i class="fas fa-arrow-left mr-2"></i>Quay lại danh sách
    </a>
</div>

<!-- Thông tin khách hàng -->
<div class="bg-white rounded-lg shadow p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Thông tin khách hàng</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Mã khách hàng</label>
            <p class="text-gray-900">@Model.MaKH</p>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Họ tên</label>
            <p class="text-gray-900">@Model.HoTen</p>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <p class="text-gray-900">@Model.Email</p>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
            <p class="text-gray-900">@Model.SoDienThoai</p>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Tên đăng nhập</label>
            <p class="text-gray-900">@Model.TenDangNhap</p>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Tổng số đơn hàng</label>
            <p class="text-gray-900 font-semibold">@(donHangs?.Count ?? 0) đơn</p>
        </div>
    </div>
</div>

<!-- Danh sách đơn hàng -->
<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="p-6 border-b border-gray-200">
        <h2 class="text-2xl font-bold text-gray-800">Lịch sử đơn hàng</h2>
    </div>
    @if (donHangs != null && donHangs.Any())
    {
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã đơn</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày đặt</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Địa chỉ giao hàng</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng tiền</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var dh in donHangs)
                {
                    decimal tongTien = 0;
                    foreach (var ct in dh.ChiTietDonHangs)
                    {
                        tongTien += ct.SoLuong * ct.DonGia;
                    }
                    
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">#@dh.MaDonHang</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@dh.NgayDat.ToString("dd/MM/yyyy HH:mm")</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-500">@(dh.DiaChiGiaoHang ?? "N/A")</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 py-1 text-xs rounded-full
                                @(dh.TrangThai == "Hoàn thành" || dh.TrangThai == "Đã giao" ? "bg-green-100 text-green-800" :
                                  dh.TrangThai == "Đang xử lý" ? "bg-yellow-100 text-yellow-800" :
                                  dh.TrangThai == "Đã hủy" ? "bg-red-100 text-red-800" : "bg-gray-100 text-gray-800")">
                                @dh.TrangThai
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@String.Format("{0:N0}", tongTien)₫</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="p-8 text-center text-gray-500">
            <i class="fas fa-shopping-cart text-4xl mb-4 text-gray-300"></i>
            <p>Khách hàng này chưa có đơn hàng nào</p>
        </div>
    }
</div>
