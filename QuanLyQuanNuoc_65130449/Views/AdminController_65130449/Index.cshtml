@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var sanPhams = ViewBag.SanPhams as List<QuanLyQuanNuoc_65130449.Models.SanPham>;
    var danhMucs = ViewBag.DanhMucs as List<QuanLyQuanNuoc_65130449.Models.DanhMuc>;
}

<!-- Thống kê tổng quan -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6 border-l-4 border-sky-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 text-sm">Tổng sản phẩm</p>
                <p class="text-3xl font-bold text-gray-800">@ViewBag.TongSanPham</p>
            </div>
            <div class="w-12 h-12 bg-sky-100 rounded-full flex items-center justify-center">
                <i class="fas fa-box text-sky-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6 border-l-4 border-emerald-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 text-sm">Tổng danh mục</p>
                <p class="text-3xl font-bold text-gray-800">@ViewBag.TongDanhMuc</p>
            </div>
            <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center">
                <i class="fas fa-list text-emerald-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 text-sm">Tổng nhân viên</p>
                <p class="text-3xl font-bold text-gray-800">@ViewBag.TongNhanVien</p>
            </div>
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                <i class="fas fa-users text-purple-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6 border-l-4 border-orange-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 text-sm">Tổng đơn hàng</p>
                <p class="text-3xl font-bold text-gray-800">@ViewBag.TongDonHang</p>
            </div>
            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
                <i class="fas fa-shopping-cart text-orange-600 text-xl"></i>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Danh sách sản phẩm -->
    <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-800">Sản phẩm mới nhất</h3>
            <a href="@Url.Action("DS_SP", "AdminController_65130449")" class="text-sky-600 hover:text-sky-700 text-sm font-medium">
                Xem tất cả <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="p-6">
            @if (sanPhams != null && sanPhams.Any())
            {
                <div class="space-y-4">
                    @foreach (var sp in sanPhams)
                    {
                        <div class="flex items-center space-x-4 p-3 hover:bg-gray-50 rounded-lg">
                            <div class="w-16 h-16 bg-gray-200 rounded-lg overflow-hidden">
                                @if (!string.IsNullOrEmpty(sp.HinhAnh))
                                {
                                    <img src="@sp.HinhAnh" alt="@sp.TenSP" class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </div>
                            <div class="flex-1">
                                <p class="font-medium text-gray-800">@sp.TenSP</p>
                                <p class="text-sm text-gray-500">@String.Format("{0:N0}", sp.DonGia)₫</p>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-gray-500 text-center py-8">Chưa có sản phẩm nào</p>
            }
        </div>
    </div>

    <!-- Danh sách danh mục -->
    <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-800">Danh mục</h3>
            <a href="@Url.Action("DS_DanhMuc", "AdminController_65130449")" class="text-sky-600 hover:text-sky-700 text-sm font-medium">
                Xem tất cả <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="p-6">
            @if (danhMucs != null && danhMucs.Any())
            {
                <div class="space-y-2">
                    @foreach (var dm in danhMucs)
                    {
                        <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg">
                            <span class="font-medium text-gray-800">@dm.TenDanhMuc</span>
                            <span class="text-sm text-gray-500">@dm.SanPhams.Count sản phẩm</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-gray-500 text-center py-8">Chưa có danh mục nào</p>
            }
        </div>
    </div>
</div>
