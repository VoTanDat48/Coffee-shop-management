@model IEnumerable<QuanLyQuanNuoc_65130449.Models.SanPham>
@{
    ViewBag.Title = "Thực đơn";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
    var categories = ViewBag.Categories as List<QuanLyQuanNuoc_65130449.Models.DanhMuc>;
    string search = ViewBag.Search as string;
    string selectedCategoryId = ViewBag.SelectedCategoryId as string;
}

<div class="max-w-6xl mx-auto px-4 py-16">

    <div class="text-center mb-12">
        <h2 class="text-4xl font-extrabold text-sky-700 mb-3 relative inline-block pb-1">
            Khám Phá Thực Đơn
            <span class="absolute bottom-0 left-0 w-full h-1 bg-emerald-400 rounded-full transform scale-x-75"></span>
        </h2>
        <p class="text-gray-600 text-xl mt-3">Chọn lựa từ các món được yêu thích và pha chế thủ công.</p>
    </div>

    <div class="bg-white rounded-xl shadow-xl border border-sky-100 p-6 mb-12">
        @using (Html.BeginForm("Menu", "TrangChuController_65130449", FormMethod.Get, new { @class = "grid grid-cols-1 md:grid-cols-4 gap-4 items-end" }))
        {
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Tìm kiếm đồ uống</label>
                <div class="relative">
                    <input type="text"
                           name="search"
                           value="@search"
                           placeholder="Nhập tên sản phẩm..."
                           class="w-full border border-gray-300 rounded-xl pl-10 pr-3 py-2.5 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition" />
                    <i class="fas fa-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Phân loại</label>
                <select name="categoryId"
                        class="w-full border border-gray-300 rounded-xl px-3 py-2.5 bg-white appearance-none focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition">
                    <option value="">Tất cả danh mục</option>
                    @if (categories != null)
                    {
                        foreach (var dm in categories)
                        {
                            bool isSelected = !string.IsNullOrEmpty(selectedCategoryId) && selectedCategoryId == dm.MaDanhMuc;
                            <option value="@dm.MaDanhMuc" @(isSelected ? "selected" : "")>
                                @dm.TenDanhMuc
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="flex space-x-3">
                <button type="submit"
                        class="flex-1 inline-flex justify-center items-center px-4 py-2.5 bg-sky-500 hover:bg-sky-600 text-white font-bold rounded-xl transition shadow-md shadow-sky-300/50 transform hover:scale-[1.02]">
                    <i class="fas fa-filter mr-2"></i> Lọc
                </button>
                <a href="@Url.Action("Menu", "TrangChuController_65130449")"
                   class="inline-flex justify-center items-center px-4 py-2.5 border-2 border-emerald-400 text-emerald-600 rounded-xl hover:bg-emerald-50 transition transform hover:scale-105">
                    <i class="fas fa-undo mr-1"></i>
                </a>
            </div>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
        int totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
            @foreach (var sp in Model)
            {
                <div class="bg-white rounded-3xl shadow-xl border border-sky-50 overflow-hidden
                            transform transition-all duration-300 ease-in-out hover:shadow-2xl
                            hover:-translate-y-2 hover:border-emerald-300">

                    <div class="h-60 bg-gray-50 overflow-hidden">
                        @if (!string.IsNullOrEmpty(sp.HinhAnh))
                        {
                            <img src="@sp.HinhAnh"
                                 alt="@sp.TenSP"
                                 class="w-full h-full object-cover transition-transform duration-500 ease-in-out hover:scale-105" />
                        }
                        else
                        {
                            <div class="w-full h-full flex items-center justify-center bg-sky-100 text-sky-500 text-3xl font-semibold">
                                <i class="fa fa-coffee text-5xl mr-3"></i> @sp.TenSP
                            </div>
                        }
                    </div>

                    <div class="p-6 space-y-4">
                        <h3 class="font-bold text-2xl text-gray-800 truncate">@sp.TenSP</h3>

                        <div class="flex justify-between items-center pt-2 border-t border-gray-100">
                            <span class="text-sky-600 text-3xl font-extrabold">
                                @String.Format("{0:N0}", sp.DonGia)₫
                            </span>

                            @if (!Request.IsAuthenticated)
                            {
                                <a href="@Url.Action("Login", "AccountController_65130449", new { returnUrl = Request.RawUrl })"
                                   class="flex items-center px-5 py-2.5 rounded-full text-white bg-emerald-500
                                          hover:bg-emerald-600 transition-colors duration-200 font-semibold
                                          shadow-lg shadow-emerald-300/60">
                                    <i class="fa fa-cart-shopping mr-2"></i> Đặt ngay
                                </a>
                            }
                            else
                            {
                                <button class="flex items-center px-5 py-2.5 rounded-full text-white bg-emerald-500
                                               hover:bg-emerald-600 transition-colors duration-200 font-semibold
                                               shadow-lg shadow-emerald-300/60"
                                        title="Chức năng đặt hàng sẽ được bổ sung sau">
                                    <i class="fa fa-cart-shopping mr-2"></i> Đặt ngay
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        if (totalPages > 1)
        {
            <nav aria-label="Pagination" class="flex justify-center mt-12">
                <ul class="inline-flex items-center space-x-2">
                    @{
                        var routeValues = new System.Web.Routing.RouteValueDictionary
                            {
                            { "search", search },
                            { "categoryId", selectedCategoryId }
                        };
                    }

                    <li>
                        @if (currentPage > 1)
                        {
                            routeValues["page"] = currentPage - 1;
                            <a href="@Url.Action("Menu", "TrangChuController_65130449", routeValues)"
                               class="flex items-center justify-center w-10 h-10 leading-tight text-gray-500 bg-white border border-gray-300 rounded-full hover:bg-sky-50 hover:text-sky-600 transition">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        }
                        else
                        {
                            <span class="flex items-center justify-center w-10 h-10 leading-tight text-gray-300 bg-white border border-gray-200 rounded-full cursor-not-allowed">
                                <i class="fas fa-angle-left"></i>
                            </span>
                        }
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        routeValues["page"] = i;
                        bool isActive = i == currentPage;
                        <li>
                            <a href="@Url.Action("Menu", "TrangChuController_65130449", routeValues)"
                               class="flex items-center justify-center w-10 h-10 font-medium @(isActive ? "bg-sky-500 text-white shadow-md shadow-sky-300/50" : "bg-white text-gray-600 hover:bg-sky-100 hover:text-sky-700") rounded-full transition duration-300">
                                @i
                            </a>
                        </li>
                    }

                    <li>
                        @if (currentPage < totalPages)
                        {
                            routeValues["page"] = currentPage + 1;
                            <a href="@Url.Action("Menu", "TrangChuController_65130449", routeValues)"
                               class="flex items-center justify-center w-10 h-10 leading-tight text-gray-500 bg-white border border-gray-300 rounded-full hover:bg-sky-50 hover:text-sky-600 transition">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        }
                        else
                        {
                            <span class="flex items-center justify-center w-10 h-10 leading-tight text-gray-300 bg-white border border-gray-200 rounded-full cursor-not-allowed">
                                <i class="fas fa-angle-right"></i>
                            </span>
                        }
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-20 bg-sky-50 rounded-3xl border-4 border-dashed border-sky-200">
            <div class="text-7xl mb-5 text-sky-500">❌</div>
            <h3 class="text-3xl font-extrabold text-sky-700 mb-3">Không tìm thấy sản phẩm</h3>
            <p class="text-gray-600 text-lg">Hãy thử lại với từ khóa hoặc danh mục khác nhé.</p>
        </div>
    }
</div>