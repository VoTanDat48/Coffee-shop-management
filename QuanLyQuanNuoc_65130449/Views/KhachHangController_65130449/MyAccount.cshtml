@model QuanLyQuanNuoc_65130449.Models.KhachHang
@{
    ViewBag.Title = "Hồ sơ của tôi";
    Layout = "~/Views/Shared/_LayoutKhachHang.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-sky-50 to-emerald-50 flex justify-center items-start py-12">
    <div class="max-w-md w-full px-4">

        <div class="text-center mb-8">
            <div class="w-14 h-14 mx-auto bg-sky-600 rounded-full flex items-center justify-center mb-2 shadow-lg shadow-sky-300/50">
                <i class="fa fa-user-circle text-white text-2xl"></i>
            </div>
            <h2 class="text-3xl font-extrabold text-gray-800">Hồ Sơ Của Tôi</h2>
            <p class="text-gray-500 text-sm mt-1">Thông tin tài khoản và tùy chỉnh</p>
        </div>

        @if (Model != null)
        {
            <div class="bg-white shadow-xl rounded-2xl p-6 border-t-4 border-emerald-500 transform transition-all duration-300 hover:shadow-2xl">

                <h3 class="text-xl font-bold text-gray-700 mb-4 border-b border-gray-100 pb-2">Chi tiết Cá nhân</h3>

                <div class="space-y-3">

                    @* Lớp cơ sở cho mỗi dòng thông tin *@
                    <div class="flex items-center p-2 bg-sky-50 rounded-lg border border-sky-100 text-sm">
                        <i class="fa fa-address-card text-sky-500 w-5"></i>
                        <span class="font-medium text-gray-700 ml-2 flex-1">Họ tên:</span>
                        <span class="text-gray-900 font-semibold">@Model.HoTen</span>
                    </div>

                    <div class="flex items-center p-2 bg-sky-50 rounded-lg border border-sky-100 text-sm">
                        <i class="fa fa-phone text-sky-500 w-5"></i>
                        <span class="font-medium text-gray-700 ml-2 flex-1">Số điện thoại:</span>
                        <span class="text-gray-900 font-semibold">@Model.SoDienThoai</span>
                    </div>

                    <div class="flex items-center p-2 bg-sky-50 rounded-lg border border-sky-100 text-sm">
                        <i class="fa fa-envelope text-sky-500 w-5"></i>
                        <span class="font-medium text-gray-700 ml-2 flex-1">Email:</span>
                        <span class="text-gray-900 font-semibold truncate max-w-[50%]">@Model.Email</span>
                    </div>
                </div>

                <h3 class="text-xl font-bold text-gray-700 mt-6 mb-4 border-b border-gray-100 pb-2">Thông tin Tài khoản</h3>

                <div class="space-y-3">
                    <div class="flex items-center p-2 bg-sky-50 rounded-lg border border-sky-100 text-sm">
                        <i class="fa fa-user text-sky-500 w-5"></i>
                        <span class="font-medium text-gray-700 ml-2 flex-1">Tên đăng nhập:</span>
                        <span class="text-gray-900 font-semibold">@Model.TenDangNhap</span>
                    </div>

                    <div class="flex items-center p-2 bg-sky-50 rounded-lg border border-sky-100 text-sm">
                        <i class="fa fa-key text-sky-500 w-5"></i>
                        <span class="font-medium text-gray-700 ml-2 flex-1">Mật khẩu:</span>
                        <span class="text-gray-900 font-semibold italic">************</span>
                    </div>
                </div>


                <div class="mt-8 text-center">
                    <a href="@Url.Action("EditAccount", "KhachHangController_65130449")"
                       class="inline-flex items-center bg-emerald-500 hover:bg-emerald-600 text-white font-bold px-6 py-2.5 rounded-xl shadow-lg shadow-emerald-300/70 transition duration-300 transform hover:scale-[1.01]">
                        <i class="fa fa-pen-to-square mr-2"></i> Chỉnh sửa thông tin
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-8 bg-red-50 rounded-2xl border-2 border-red-200 shadow-md">
                <i class="fa fa-triangle-exclamation text-red-600 text-3xl mb-2"></i>
                <p class="text-red-700 font-bold text-lg">
                    Lỗi truy cập hồ sơ
                </p>
                <p class="text-gray-600 mt-1 text-sm">Thông tin khách hàng không tồn tại hoặc phiên đăng nhập đã hết hạn.</p>
                <a href="@Url.Action("Login", "AccountController_65130449")" class="text-sky-600 font-medium mt-2 inline-block text-sm">Đăng nhập lại</a>
            </div>
        }
    </div>
</div>