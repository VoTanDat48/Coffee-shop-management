@model QuanLyQuanNuoc_65130449.Models.DonHang
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutKhachHang.cshtml";
    var trangThaiDict = ViewBag.TrangThaiDict as Dictionary<string, string> ?? new Dictionary<string, string>();
}

<div class="max-w-6xl mx-auto px-4 py-16">
    <div class="mb-6">
        <a href="@Url.Action("MyOrders", "KhachHangController_65130449")"
           class="inline-flex items-center text-sky-600 hover:text-sky-800 transition">
            <i class="fas fa-arrow-left mr-2"></i> Quay lại danh sách đơn hàng
        </a>
    </div>

    <div class="text-center mb-12">
        <h2 class="text-4xl font-extrabold text-sky-700 mb-3 relative inline-block pb-1">
            Chi Tiết Đơn Hàng
            <span class="absolute bottom-0 left-0 w-full h-1 bg-emerald-400 rounded-full transform scale-x-75"></span>
        </h2>
        <p class="text-lg text-gray-600">Mã đơn hàng: <span class="font-bold text-sky-600">@Model.MaDonHang</span></p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Thông tin đơn hàng -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Trạng thái đơn hàng -->
            <div class="bg-white rounded-xl shadow-xl border border-sky-100 p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-info-circle text-sky-500 mr-2"></i>Trạng thái đơn hàng
                </h3>
                <div class="flex items-center justify-between">
                    @{
                        string trangThaiText = trangThaiDict.ContainsKey(Model.TrangThai)
                            ? trangThaiDict[Model.TrangThai]
                            : Model.TrangThai;
                        string trangThaiClass = "px-5 py-3 rounded-full font-semibold text-base";

                        switch (Model.TrangThai)
                        {
                            case "CHODUYET":
                                trangThaiClass += " bg-yellow-100 text-yellow-800";
                                break;
                            case "DADUYET":
                            case "DANGPHACHE":
                                trangThaiClass += " bg-blue-100 text-blue-800";
                                break;
                            case "DANGGIAO":
                                trangThaiClass += " bg-purple-100 text-purple-800";
                                break;
                            case "HOANTHANH":
                                trangThaiClass += " bg-green-100 text-green-800";
                                break;
                            case "HUY":
                                trangThaiClass += " bg-red-100 text-red-800";
                                break;
                            default:
                                trangThaiClass += " bg-gray-100 text-gray-800";
                                break;
                        }
                    }
                    <span class="@trangThaiClass">
                        @if (Model.TrangThai == "CHODUYET")
                        {
                            <i class="fas fa-clock mr-2"></i>
                        }
                        else if (Model.TrangThai == "DANGPHACHE")
                        {
                            <i class="fas fa-coffee mr-2"></i>
                        }
                        else if (Model.TrangThai == "DANGGIAO")
                        {
                            <i class="fas fa-truck mr-2"></i>
                        }
                        else if (Model.TrangThai == "HOANTHANH")
                        {
                            <i class="fas fa-check-circle mr-2"></i>
                        }
                        else if (Model.TrangThai == "HUY")
                        {
                            <i class="fas fa-times-circle mr-2"></i>
                        }
                        @trangThaiText
                    </span>
                    @if (Model.DaThanhToan == true)
                    {
                        <span class="px-4 py-2 bg-emerald-100 text-emerald-800 rounded-full font-semibold">
                            <i class="fas fa-check mr-2"></i>Đã thanh toán
                        </span>
                    }
                    else
                    {
                        <span class="px-4 py-2 bg-orange-100 text-orange-800 rounded-full font-semibold">
                            <i class="fas fa-hourglass-half mr-2"></i>Chưa thanh toán
                        </span>
                    }
                </div>
            </div>

            <!-- Chi tiết sản phẩm -->
            <div class="bg-white rounded-xl shadow-xl border border-sky-100 p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-6">
                    <i class="fas fa-list-ul text-sky-500 mr-2"></i>Sản phẩm đã đặt
                </h3>

                @if (Model.ChiTietDonHangs != null && Model.ChiTietDonHangs.Any())
                {
                    <div class="space-y-4">
                        @foreach (var chiTiet in Model.ChiTietDonHangs)
                        {
                            <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded-lg">
                                <div class="flex-shrink-0 h-20 w-20">
                                    @if (!string.IsNullOrEmpty(chiTiet.SanPham.HinhAnh))
                                    {
                                        <img class="h-20 w-20 rounded-lg object-cover" src="@chiTiet.SanPham.HinhAnh" alt="@chiTiet.SanPham.TenSP" />
                                    }
                                    else
                                    {
                                        <div class="h-20 w-20 rounded-lg bg-sky-100 flex items-center justify-center text-sky-500 text-2xl">
                                            <i class="fa fa-coffee"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h4 class="text-lg font-semibold text-gray-900">@chiTiet.SanPham.TenSP</h4>
                                    <p class="text-sm text-gray-600">Số lượng: @chiTiet.SoLuong</p>
                                    <p class="text-sm text-gray-600">Đơn giá: @String.Format("{0:N0}", chiTiet.DonGia)₫</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-lg font-bold text-sky-600">
                                        @String.Format("{0:N0}", chiTiet.SoLuong * chiTiet.DonGia)₫
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Thông tin thanh toán và giao hàng -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Thông tin giao hàng -->
            <div class="bg-white rounded-xl shadow-xl border border-sky-100 p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-map-marker-alt text-emerald-500 mr-2"></i>Địa chỉ giao hàng
                </h3>
                <p class="text-gray-700 leading-relaxed">@Model.DiaChiGiaoHang</p>
            </div>

            <!-- Tóm tắt thanh toán -->
            <div class="bg-white rounded-xl shadow-xl border border-sky-100 p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-receipt text-sky-500 mr-2"></i>Tóm tắt thanh toán
                </h3>
                <div class="space-y-3">
                    <div class="flex justify-between text-gray-700">
                        <span>Tạm tính:</span>
                        <span class="font-semibold">
                            @{
                                decimal tamTinh = (Model.TongTien ?? 0) - (Model.PhiVanChuyen ?? 0);
                            }
                            @String.Format("{0:N0}", tamTinh)₫
                        </span>
                    </div>
                    <div class="flex justify-between text-gray-700">
                        <span>Phí vận chuyển:</span>
                        <span class="font-semibold">@String.Format("{0:N0}", Model.PhiVanChuyen ?? 0)₫</span>
                    </div>
                    <div class="flex justify-between text-2xl font-bold text-sky-600 pt-3 border-t-2 border-gray-200">
                        <span>Tổng cộng:</span>
                        <span>@String.Format("{0:N0}", Model.TongTien ?? 0)₫</span>
                    </div>
                </div>

                @if (Model.DaThanhToan == true && Model.NgayThanhToan.HasValue)
                {
                    <div class="mt-4 p-3 bg-emerald-50 border border-emerald-200 rounded-lg">
                        <p class="text-sm text-emerald-700">
                            <i class="fas fa-check-circle mr-2"></i>
                            Đã thanh toán vào: @Model.NgayThanhToan.Value.ToString("dd/MM/yyyy HH:mm")
                        </p>
                    </div>
                }
            </div>

            <!-- Thông tin khác -->
            <div class="bg-white rounded-xl shadow-xl border border-sky-100 p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-info-circle text-gray-500 mr-2"></i>Thông tin khác
                </h3>
                <div class="space-y-2 text-sm text-gray-700">
                    <p>
                        <span class="font-semibold">Ngày đặt:</span><br>
                        @Model.NgayDat.ToString("dd/MM/yyyy HH:mm")
                    </p>
                    @if (!string.IsNullOrEmpty(Model.NhanVienDuyet))
                    {
                        <p>
                            <span class="font-semibold">Nhân viên duyệt:</span><br>
                            @Model.NhanVienDuyet
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.NhanVienGiao))
                    {
                        <p>
                            <span class="font-semibold">Nhân viên giao hàng:</span><br>
                            @Model.NhanVienGiao
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

