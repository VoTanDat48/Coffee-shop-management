@model IEnumerable<QuanLyQuanNuoc_65130449.Models.ChiTietGioHang>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_LayoutKhachHang.cshtml";
    decimal tongTien = ViewBag.TongTien != null ? (decimal)ViewBag.TongTien : 0;
}

<div class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
        <h2 class="text-4xl font-extrabold text-sky-700 mb-3 relative inline-block pb-1">
            Giỏ Hàng Của Bạn
            <span class="absolute bottom-0 left-0 w-full h-1 bg-emerald-400 rounded-full transform scale-x-75"></span>
        </h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="bg-white rounded-xl shadow-xl border border-sky-100 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-sky-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Sản phẩm</th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Đơn giá</th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Số lượng</th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Thành tiền</th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200" id="cart-items">
                        @foreach (var item in Model)
                        {
                            <tr data-ctgh="@item.MaCTGioHang">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-20 w-20">
                                            @if (!string.IsNullOrEmpty(item.SanPham.HinhAnh))
                                            {
                                                <img class="h-20 w-20 rounded-lg object-cover" src="@item.SanPham.HinhAnh" alt="@item.SanPham.TenSP" />
                                            }
                                            else
                                            {
                                                <div class="h-20 w-20 rounded-lg bg-sky-100 flex items-center justify-center text-sky-500 text-2xl">
                                                    <i class="fa fa-coffee"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">@item.SanPham.TenSP</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900 font-semibold">
                                        @String.Format("{0:N0}", item.DonGiaLucThem)₫
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center space-x-2">
                                        <button onclick="decreaseQuantity('@item.MaCTGioHang')" 
                                                class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded-lg hover:bg-gray-100 transition">
                                            <i class="fas fa-minus text-xs"></i>
                                        </button>
                                        <input type="number" 
                                               id="quantity-@item.MaCTGioHang" 
                                               value="@item.SoLuong" 
                                               min="1"
                                               class="w-16 text-center border border-gray-300 rounded-lg py-1"
                                               onchange="updateQuantityFromInput('@item.MaCTGioHang')" />
                                        <button onclick="increaseQuantity('@item.MaCTGioHang')" 
                                                class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded-lg hover:bg-gray-100 transition">
                                            <i class="fas fa-plus text-xs"></i>
                                        </button>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-bold text-sky-600" id="total-@item.MaCTGioHang">
                                        @String.Format("{0:N0}", item.SoLuong * item.DonGiaLucThem)₫
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <button onclick="removeItem('@item.MaCTGioHang')" 
                                            class="text-red-600 hover:text-red-900 transition">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="bg-sky-50 px-6 py-6 border-t border-gray-200">
                <div class="flex justify-between items-center mb-4">
                    <span class="text-lg font-semibold text-gray-700">Tổng tiền:</span>
                    <span class="text-2xl font-bold text-sky-600" id="cart-total">@String.Format("{0:N0}", tongTien)₫</span>
                </div>
                <div class="flex justify-end space-x-4">
                    <a href="@Url.Action("Menu_KH", "KhachHangController_65130449")" 
                       class="px-6 py-3 border-2 border-sky-500 text-sky-600 rounded-xl hover:bg-sky-50 transition font-semibold">
                        <i class="fas fa-arrow-left mr-2"></i> Tiếp tục mua sắm
                    </a>
                    <a href="@Url.Action("Checkout", "KhachHangController_65130449")" 
                       class="px-6 py-3 bg-emerald-500 text-white rounded-xl hover:bg-emerald-600 transition font-semibold shadow-lg shadow-emerald-300/50">
                        <i class="fas fa-shopping-bag mr-2"></i> Đặt hàng
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-20 bg-sky-50 rounded-3xl border-4 border-dashed border-sky-200">
            <div class="text-7xl mb-5 text-sky-500">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <h3 class="text-3xl font-extrabold text-sky-700 mb-3">Giỏ hàng trống</h3>
            <p class="text-gray-600 text-lg mb-6">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm!</p>
            <a href="@Url.Action("Menu_KH", "KhachHangController_65130449")" 
               class="inline-flex items-center px-6 py-3 bg-sky-500 text-white rounded-xl hover:bg-sky-600 transition font-semibold shadow-lg shadow-sky-300/50">
                <i class="fas fa-arrow-left mr-2"></i> Xem thực đơn
            </a>
        </div>
    }
</div>

<script>
    function increaseQuantity(maCTGioHang) {
        var currentInput = $('#quantity-' + maCTGioHang);
        var currentValue = parseInt(currentInput.val()) || 1;
        var newValue = currentValue + 1;
        updateQuantity(maCTGioHang, newValue);
    }

    function decreaseQuantity(maCTGioHang) {
        var currentInput = $('#quantity-' + maCTGioHang);
        var currentValue = parseInt(currentInput.val()) || 1;
        var newValue = currentValue - 1;
        
        if (newValue < 1) {
            if (confirm('Bạn có muốn xóa sản phẩm này khỏi giỏ hàng?')) {
                removeItem(maCTGioHang);
            }
            return;
        }
        
        updateQuantity(maCTGioHang, newValue);
    }

    function updateQuantityFromInput(maCTGioHang) {
        var currentInput = $('#quantity-' + maCTGioHang);
        var newValue = parseInt(currentInput.val()) || 1;
        
        if (newValue < 1) {
            currentInput.val(1);
            newValue = 1;
        }
        
        updateQuantity(maCTGioHang, newValue);
    }

    function updateQuantity(maCTGioHang, soLuong) {
        if (soLuong < 1) {
            if (confirm('Bạn có muốn xóa sản phẩm này khỏi giỏ hàng?')) {
                removeItem(maCTGioHang);
            }
            return;
        }

        $.ajax({
            url: '@Url.Action("UpdateCart", "KhachHangController_65130449")',
            type: 'POST',
            data: {
                maCTGioHang: maCTGioHang,
                soLuong: soLuong
            },
            success: function (response) {
                if (response.success) {
                    // Cập nhật thành tiền của item
                    var totalCell = $('#total-' + maCTGioHang);
                    if (totalCell.length) {
                        totalCell.text(formatCurrency(response.thanhTien));
                    }

                    // Cập nhật số lượng input
                    $('#quantity-' + maCTGioHang).val(soLuong);

                    // Cập nhật tổng tiền
                    $('#cart-total').text(formatCurrency(response.tongTien));
                } else {
                    alert(response.message || 'Có lỗi xảy ra khi cập nhật giỏ hàng.');
                    // Reload để lấy giá trị chính xác
                    location.reload();
                }
            },
            error: function () {
                alert('Có lỗi xảy ra khi cập nhật giỏ hàng.');
                location.reload();
            }
        });
    }

    function removeItem(maCTGioHang) {
        if (!confirm('Bạn có chắc chắn muốn xóa sản phẩm này khỏi giỏ hàng?')) {
            return;
        }

        $.ajax({
            url: '@Url.Action("RemoveFromCart", "KhachHangController_65130449")',
            type: 'POST',
            data: {
                maCTGioHang: maCTGioHang
            },
            success: function (response) {
                if (response.success) {
                    // Xóa hàng khỏi bảng
                    $('tr[data-ctgh="' + maCTGioHang + '"]').fadeOut(300, function () {
                        $(this).remove();
                        
                        // Kiểm tra nếu giỏ hàng trống thì reload trang
                        if ($('#cart-items tr').length === 0) {
                            location.reload();
                        }
                    });

                    // Cập nhật tổng tiền
                    $('#cart-total').text(formatCurrency(response.tongTien));
                } else {
                    alert(response.message || 'Có lỗi xảy ra khi xóa sản phẩm.');
                }
            },
            error: function () {
                alert('Có lỗi xảy ra khi xóa sản phẩm.');
            }
        });
    }

    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN').format(amount) + '₫';
    }
</script>
