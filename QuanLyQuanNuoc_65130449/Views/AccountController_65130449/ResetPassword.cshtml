@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-sky-50 to-emerald-50 py-12 px-4">
    <div class="max-w-lg w-full bg-white p-10 rounded-3xl shadow-2xl border border-gray-100">

        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-800">Xác nhận mã OTP</h2>
            <p class="text-gray-500 mt-2">Chúng tôi đã gửi mã đến Email của bạn</p>
        </div>

        @using (Html.BeginForm("ResetPassword", "AccountController_65130449", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="space-y-4">
                <div>
                    <label class="block text-gray-700 font-medium mb-1">Mã OTP (6 chữ số)</label>
                    <input type="text" name="OTPConfirm" class="w-full border border-gray-300 px-4 py-3 rounded-xl text-center text-2xl tracking-widest font-bold focus:border-emerald-500 outline-none" placeholder="000000" required />
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-1">Mật khẩu mới</label>
                    <input type="password" name="MatKhauMoi" class="w-full border border-gray-300 px-4 py-3 rounded-xl outline-none focus:border-sky-500" required />
                </div>

                <div>
                    <label class="block text-gray-700 font-medium mb-1">Xác nhận mật khẩu mới</label>
                    <input type="password" name="XacNhanMatKhau" class="w-full border border-gray-300 px-4 py-3 rounded-xl outline-none focus:border-sky-500" required />
                </div>

                <button type="submit" class="w-full py-3 bg-emerald-500 hover:bg-emerald-600 text-white rounded-xl font-bold text-lg transition duration-300">
                    Cập nhật mật khẩu
                </button>
            </div>
        }
    </div>
</div>