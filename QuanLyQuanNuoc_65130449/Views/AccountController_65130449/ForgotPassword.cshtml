@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-sky-50 to-emerald-50 py-12 px-4">
    <div class="max-w-lg w-full bg-white p-10 rounded-3xl shadow-2xl border border-gray-100 relative overflow-hidden">

        <div class="absolute top-0 right-0 h-40 w-40 bg-sky-100 opacity-50 rounded-full transform translate-x-1/2 -translate-y-1/2"></div>

        <div class="text-center mb-8">
            <div class="w-20 h-20 mx-auto bg-amber-500 rounded-2xl flex items-center justify-center shadow-lg shadow-amber-400/50">
                <i class="fa fa-key text-white text-3xl"></i>
            </div>
            <h2 class="text-3xl font-bold text-gray-800 mt-5">Quên mật khẩu?</h2>
            <p class="text-gray-500 mt-1">Đừng lo, hãy nhập Email để nhận mã khôi phục.</p>
        </div>

        @using (Html.BeginForm("ForgotPassword", "AccountController_65130449", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-5 p-3 bg-red-50 border border-red-200 text-red-600 rounded-lg text-center font-medium text-sm">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <div class="mb-6">
                <label for="Email" class="block text-gray-700 font-medium mb-2">Email đã đăng ký</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                        <i class="fa fa-envelope"></i>
                    </span>
                    <input type="email" name="Email" id="Email"
                           class="w-full border border-gray-300 pl-10 pr-3 py-3 rounded-xl focus:outline-none focus:border-sky-500 focus:ring-2 focus:ring-sky-200 transition duration-200"
                           placeholder="vidu@gmail.com" required />
                </div>
            </div>

            <button type="submit"
                    class="w-full py-3 bg-sky-500 hover:bg-sky-600 text-white rounded-xl font-bold text-lg transition duration-300 shadow-lg shadow-sky-300/50">
                Gửi mã xác nhận
            </button>
        }

        <div class="mt-8 text-center pt-6 border-t border-gray-100">
            <a href="@Url.Action("Login", "AccountController_65130449")" class="text-sky-600 font-medium hover:underline">
                <i class="fa fa-arrow-left mr-2"></i>Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>