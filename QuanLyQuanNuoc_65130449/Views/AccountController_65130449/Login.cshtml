@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4">
    <div class="max-w-md w-full bg-white p-8 rounded-2xl shadow-lg">
        <div class="flex justify-center mb-6">
            <div class="w-16 h-16 bg-purple-600 rounded-lg flex items-center justify-center">
                <span class="text-white text-2xl font-bold">Q</span>
            </div>
        </div>

        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Đăng nhập tài khoản</h2>

        @using (Html.BeginForm("Login", "AccountController_65130449", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-4 text-red-600 text-center">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Phần còn lại giữ nguyên -->
            <div class="mb-4">
                <label for="TenDangNhap" class="block text-gray-700 mb-2">Tên đăng nhập</label>
                <input type="text" name="TenDangNhap" id="TenDangNhap"
                       class="w-full border border-gray-300 px-3 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600"
                       placeholder="Nhập tên đăng nhập" required />
            </div>

            <div class="mb-6">
                <label for="MatKhau" class="block text-gray-700 mb-2">Mật khẩu</label>
                <input type="password" name="MatKhau" id="MatKhau"
                       class="w-full border border-gray-300 px-3 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600"
                       placeholder="Nhập mật khẩu" required />

                <!-- Checkbox hiện mật khẩu -->
                <div class="flex items-center mt-2">
                    <input type="checkbox" id="ShowPass" class="mr-2" onclick="togglePassword()" />
                    <label for="ShowPass" class="text-gray-700 text-sm">Hiện mật khẩu</label>
                </div>
            </div>

            <script>
    function togglePassword() {
        var pass = document.getElementById("MatKhau");
        pass.type = (pass.type === "password") ? "text" : "password";
    }
            </script>

            <button type="submit"
                    class="w-full py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium transition">
                Đăng nhập
            </button>
        }

        <div class="mt-6 text-center">
            <span class="text-gray-600 mr-2">Chưa có tài khoản?</span>
            <a href="@Url.Action("Register", "AccountController_65130449")"
               class="inline-block px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg font-medium transition">
                Đăng ký
            </a>
        </div>
    </div>
</div>